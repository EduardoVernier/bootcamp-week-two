<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iws.futuretalents.quotes.DetailActivity">

    <android.support.constraint.Guideline
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="185dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="185dp"
        tools:layout_editor_absoluteX="0dp"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"/>

    <TextView
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris egestas sem et elementum pulvinar."
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/quote"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"/>

    <TextView
        android:text="Lorem ipsum dolor (1967)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:layout_marginTop="16dp"/>

    <TextView
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris egestas sem et elementum pulvinar. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris egestas sem et elementum pulvinar."
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/plot"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="129dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="129dp"/>

    <TextView
        android:text="Director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/plot"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:text="Writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"/>

    <TextView
        android:text="Cast"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/textView7"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/director"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/plot"
        android:layout_marginStart="16dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/writer"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/director"
        android:layout_marginTop="8dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cast"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/writer"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        android:layout_marginStart="16dp"/>

</android.support.constraint.ConstraintLayout>
